{
  "version": 2,
  "builds": [
    {
      "src": "{core}/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "./build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "engines": {
    "node": "18.x"
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "{core}/wsgi.py"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/api/index" }
  ]
}
